@model Agendamento
@{
  ViewData["Title"] = "Consulta";
}
<!doctype html>
  <html lang="pt-br">

  <meta charset="utf-8">

  <head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] consulta</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/privacy.css" />
  </head>
  <body id="fundo">
  
  <div class="formulario">
    
     
        <p class="letra">Consulta</p>
            <p id="mensagem">@ViewBag.Mensagem </p>
        <form asp-action="Consulta" method="POST">
           <p>
            <input type="text" asp-for="NomeCompleto" placeholder="Nome completo" />
          </p> 
           <p>
            <input type="date" asp-for="Marcar"  placeholder="Data" />
          </p> 
           <p>
            <input type="text" asp-for="Turno" placeholder="turno" />
          </p>
       <p>
                  <select title="tipo de consulta">
                    
              <option type="text" asp-for="Tipo"> Hiperteção</option>
               <option type="text" asp-for="Tipo"> Saúde da Mulher </option>
               
               <option type="text" asp-for="Tipo"> Hiperdia</option>
               
               <option type="text" asp-for="Tipo"> Pré-natal</option>

              </select>
              </p>
            <p>
            <input type="number" asp-for="Idade" placeholder="Idade" />
          </p>
          <p><input type="submit" value="Fazer consulta"></p>
          
        </form>

      </div>
